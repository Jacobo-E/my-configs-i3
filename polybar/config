ramp-2 = %{F#D45500}

ramp-padding = 0
;ramp-background = %{F#0a81f5}
;ramp-foreground = %{F#0a81f5}

[module/cpu]
type = internal/cpu
;Seconds to sleep between updates:
interval = 1

format-prefix = "%{F#D45500} "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #f90000
;label = %percentage:1%%

[module/memory]
type = internal/memory
;Seconds to sleep between updates:
interval = 2
format-prefix = "%{F#D45500} "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #4bffdc
label = %percentage_used%%/%gb_used%

[module/wlan]
type = internal/network
interface = wlp1s0
interval = 3.0

format-connected = <ramp-signal>
;format-connected-underline = #f78e1
label-connected = %essid%

;format-disconnected =
format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = 
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = %{F#ff2929}
ramp-signal-1 = %{F#ffa129}
ramp-signal-2 = %{F#ffce29}
ramp-signal-3 = %{F#fffc29}
ramp-signal-4 = %{F#D45500}
ramp-signal-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %d/%m/%Y"

time = %H:%M
time-alt = %H:%M

format-prefix = %{F#D45500}
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #0a6cf5

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
use-ui-max = false

format-volume = <ramp-volume><label-volume>

label-volume = %{F#ffffff} %percentage%%
label-volume-foreground = ${colors.black}
label-volume-background = ${colors.white}
label-volume-padding = 0

format-muted = <label-muted>
format-muted-prefix = "%{F#D45500} "
format-muted-prefix-foreground = ${colors.black}
format-muted-prefix-padding = 0
label-muted = muted
label-muted-foreground = ${colors.black}
label-muted-background = ${colors.white}
label-muted-padding = 1


ramp-volume-0 = %{F#D45500}
ramp-volume-1 = %{F#D45500}
ramp-volume-2 = %{F#D45500}
ramp-volume-padding = 0
ramp-volume-foreground = ${colors.black}

click-right = exec pavucontrol

;[module/temperature]
;type = internal/temperature
;thermal-zone = 0
;warn-temperature = 60

