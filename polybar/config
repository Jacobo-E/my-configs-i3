enable-ipc = true

[module/spotify]
type = custom/script
interval = 1
format-prefix = "%{F#08ab31}  %{F#ffffff}"
format = <label>
exec = .config/polybar/scripts/spotify.sh %title% - %artist%
;exec = polybar-spotify -f '{artist}: {song} '
;format-foreground = ${colors.green}
;format-background = ${colors.black}
;format-underline = #1db954
;control players (optional)
click-left = playerctl --player=spotify play-pause 
click-right = playerctl --player=spotify next 
click-middle = playerctl --player=spotify previous

;[module/spotify]
;type = custom/script
;tail = true
;; prefix symbol is shown before the text
;format-prefix = "%{F#08ab31}  %{F#ffffff}"
;format = <label>
;exec = ~/.config/polybar/scripts/scroll_spotify_status.sh

;[module/spotify-prev]
;label-active-font = 3
;type = custom/script
;exec = echo "%{F#08ab31}"
;format = <label>
;click-left = playerctl previous spotify

;;[module/spotify-play-pause]
;;type = custom/script
;;exec = echo "%{F#08ab31} "
;;format = <label>
;;click-left = playerctl play-pause spotify

;[module/spotify-play-pause]
;type = custom/ipc
;hook-0 = echo "%{F#08ab31} "
;hook-1 = echo ""
;initial = 1
;click-left = playerctl play-pause spotify

;[module/spotify-next]
;type = custom/script
;exec = echo "%{F#08ab31}"
;format = <label>
;click-left = playerctl next spotify

[module/redshift]
type = custom/text
content = %{F#D45500} 
click-left = exec redshift -l 19.4978:-99.1269 -t 6500:3600
click-right = exec killall redshift

;[module/filesystem]
;type = internal/fs
;interval = 25
;label-active-font = 2
;mount-0 = /

;label-mounted = %{F#D45500}%{F-} %percentage_used%%
;label-unmounted = %mountpoint% not mounted
;label-unmounted-foreground = ${colors.foreground-alt}


;[module/xbacklight]
;type = internal/backlight
;card = intel_backlight
;format = <ramp> <label>
;enable-scroll = true
;label = %{F#FFFFFF}%percentage: 2%%
;ramp-0 = %{F#D45500}
;ramp-1 = %{F#D45500}
;ramp-2 = %{F#D45500}


