[bar/secondRice]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 23
offset-x = 0%
offset-y = 0%
radius = 0.0
fixed-center = true 

background = #000000
foreground = #ffffff

line-size = 1
line-color = #f00

border-size = 3
border-color = #08ab31

padding-left = 0
padding-right = 1.5

module-margin= 1

font-0 = Tamzen:pixelsize=12;2
font-1 = Tamzen:pixelsize=12;2
font-2 = Font Awesome 5 Free Regular:size=10;2
font-3 = Font Awesome 5 Free Solid:size=10;2
font-4 = Font Awesome 5 Brands Regular:size=10;2
font-5 = Font Awesome 5 Free Solid:size=6;2

modules-left = i3 i3mode 
modules-center = spotify
modules-right = xbacklight pulseaudio date wlan memory cpu redshift 

tray-position = right
tray-padding = 2
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

override-redirect = false

separator = %{F#ffffff}┃%{F-}

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;;;;;;;;; MODULES ;;;;;;;;;;;;;;;;;;;
